@model IEnumerable<CarRental.EntityFramework.Office>

@{
    ViewBag.Title = "Popis ureda";
}

<h2>Popis ureda</h2>

<p>
    @Html.ActionLink("Otvori novi ured", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
        <th colspan="2">Automobili</th>
        <th></th>
    </tr>
    <tr>
        <th colspan="2"></th>
        <th>Ukupno</th>
        <th>Slobodno</th>
        <th colspan="1"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount) %
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cars.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cars.Count)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Zatvori", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
