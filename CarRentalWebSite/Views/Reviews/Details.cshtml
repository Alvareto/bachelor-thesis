@model CarRental.EntityFramework.Review

@{
    ViewBag.Title = "Details";
}

<h2>Detalji</h2>

<div>
    <h4>Komentar na uslugu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @for (int i = 0; i < Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (int i = 0; i < 5 - Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Car_Id)
        </dt>

        <dd>
            @Html.ActionLink(Model.Car.FullName, "Details", "Cars", new { id = Model.Car_Id }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Reservation_Id)
        </dt>

        <dd>
            @if (Model.Reservation_Id.HasValue)
            {
                @Html.ActionLink("Rezervacija", "Details", "Reservations", new { id = Model.Reservation_Id }, new { })
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Uredi", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Nazad na popis", "Index", new { }, new { @class = "btn btn-default" })
</p>
