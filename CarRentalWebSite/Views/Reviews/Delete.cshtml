@model CarRental.EntityFramework.Review

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @for (int i = 0; i < Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @for (int i = 0; i < 5 - Model.Rating; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Car_Id)
        </dt>

        <dd>
            @Html.ActionLink(Model.Car.FullName, "Details", "Cars", new { id = Model.Car_Id }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Reservation_Id)
        </dt>

        <dd>
            @if (Model.Reservation_Id.HasValue)
            {
                @Html.ActionLink("Rezervacija", "Details", "Reservations", new { id = Model.Reservation_Id }, new { })
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-danger" /> |
            @Html.ActionLink("Odustani", "Index", new {}, new {@class = "btn btn-default"})
        </div>
    }
</div>
